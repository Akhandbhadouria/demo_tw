# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=False

# Database (PostgreSQL for production)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# For PythonAnywhere (MySQL):
# DATABASE_URL=mysql://username:password@host/database
# Example: DATABASE_URL=mysql://yourusername:yourpassword@yourusername.mysql.pythonanywhere-services.com/yourusername$dbname

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=.onrender.com,yourdomain.com

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret

# Redis URL for Channels (optional, uses InMemory if not set)
# REDIS_URL=redis://localhost:6379

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://your-app.onrender.com
